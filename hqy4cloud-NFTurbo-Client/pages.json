{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [{
			"path": "pages/home",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": true,
				"h5": {
					"titleNView": false
				},
				"app-plus": {
					"titleNView": false
				}
			}
		},
		{
			"path": "pages/login",
			"style": {
				"navigationBarTitleText": "登录",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/auth",
			"style": {
				"navigationBarTitleText": "实名认证",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/nftDetail",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/setting",
			"style": {
				"navigationBarTitleText": "设置",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/my",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": true,
				"h5": {
					"titleNView": false
				},
				"app-plus": {
					"titleNView": false
				}
			}

		}, {
			"path": "pages/order",
